<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mangaapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/manga_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/manga_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".detailtruyen.ChapterActivity"></activity>
        <activity android:name=".detailtruyen.detail_truyen" />
        <activity android:name=".login.Start" />
        <activity android:name=".themtruyen" />
        <activity android:name=".login.Login" />
        <activity android:name=".login.Register" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>